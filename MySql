create database Employee;
use Employee;
create table Employee(EMPLOYEE_ID int, FIRST_NAME varchar(255), LAST_NAME varchar(255), SALARY int, JOINING_DATE date, DEPARTMENT varchar(255),primary key(EMPLOYEE_ID));
